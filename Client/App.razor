<CascadingAuthenticationState>
	<Router AppAssembly="@typeof(Program).Assembly">
		<Found Context="routeData">
			<AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
				<Authorizing>
					<p>Resolving user profile...</p>
				</Authorizing>
				<NotAuthorized>
					<h3><a style="color:red" href="https://httpstatuses.com/403" target="_blank">403 - Forbidden</a></h3>
					<p>You're not authorized to view this page. You need to log in.</p>
				</NotAuthorized>
			</AuthorizeRouteView>
		</Found>
		<NotFound>
			<LayoutView Layout="@typeof(MainLayout)">
				<p>Sorry, there's nothing at this address.</p>
			</LayoutView>
		</NotFound>
	</Router>
</CascadingAuthenticationState>
